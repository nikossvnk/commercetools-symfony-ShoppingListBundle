<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="commercetools.cache.shopping_list" type="string">false</parameter>
    </parameters>
    <services>
        <service id="Commercetools\Symfony\ShoppingListBundle\Model\Repository\ShoppingListRepository">
            <argument>%commercetools.cache.shopping_list%</argument>
            <argument type="service" id="commercetools.cache" />
            <argument type="service" id="commercetools.client"/>
            <argument type="service" id="commmercetools.mapper.factory" />
        </service>
        <service id="Commercetools\Symfony\ShoppingListBundle\EventListener\ShoppingListSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>
        <service id="Commercetools\Symfony\ShoppingListBundle\Manager\ShoppingListManager">
            <argument id="Commercetools\Symfony\ShoppingListBundle\Model\Repository\ShoppingListRepository" type="service"/>
            <argument id="event_dispatcher" type="service"/>
        </service>
    </services>
</container>
